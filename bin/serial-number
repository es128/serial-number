#!/usr/bin/env node

'use strict';

var path = require('path');
var fs = require('fs');

var serialNumber = require('../');

var cmdprefix = '/usr/sbin/';
if (process.argv[process.argv.length - 1] === '--uuid') {
	serialNumber.preferUUID = true;
    if (process.argv[process.argv.length - 2].indexOf('--cmdprefix') > -1) {
        cmdprefix = (process.argv[process.argv.length - 2]).split("=")[1];
    }
} else if (process.argv[process.argv.length - 1].indexOf('--cmdprefix') > -1) {
    cmdprefix = (process.argv[process.argv.length - 1]).split("=")[1];
}

serialNumber(function (err, val) {
	if (err) throw err;
	console.log(val);
}, cmdprefix);
